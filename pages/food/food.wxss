/* pages/food/food.wxss */
@import "../template/activity/act_comment.wxss";
@import "../template/activity/applyed.wxss";
@import "../template/toasts/toasts.wxss";

.input-wrapper {
  margin: 5vw;
}

.search-icon {
  display: inline-block;
  width: 6vw;
  height: 6vw;
  margin-right: 2vw;
  margin-bottom: 1vw;
}

input {
  display: inline-block;
  width: 82vw;
  height: 8vw;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  font-family: MicroSoft YaHei;
  font-size: 4vw;
}

.input-placeholder {
  font-family: MicroSoft YaHei;
  font-size: 4vw;
}

.banner-text {
  font-size: 12px;
  color: #b5b5b5;
  margin-left: 15px;
  margin-bottom: 5px;
}

.food {
  margin-left: 6px;
}

.food-message {
  display: flex;
  flex-direction: row;
}

.food-message-text {
  display: flex;
  flex-direction: column;
}

.food-title {
  font-size: 16px;
}

.food-number{
  color: #EE5C42;
  margin-right: 4px;
}

.food-image {
  display: inline-block;
  width: 45px;
  height: 45px;
  margin-left: 6px;
  margin-right: 12px;
  margin-bottom: 6px;
  margin-top: 6px;
}

.userInfo {
  padding: 15rpx 30rpx 15rpx 30rpx;
  background-color: rgb(255, 255, 255);
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  border: 2rpx solid rgb(180, 180, 180);
  float: left;
}

.nickTime {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 0 30rpx;
}

.actComment {
  word-break: break-all;
  white-space: normal;
  background: #fff;
  font-size: 30rpx;
  letter-spacing: -0.8rpx;
  text-align: justify;
  line-height: 44rpx;
  margin-left: 100rpx;
  border-bottom:1rpx solid #e6e6e6; 
}

.nick, .postTime {
  font-size: 28rpx;
}
