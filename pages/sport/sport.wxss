/* pages/food/food.wxss */

.input-wrapper {
  margin: 5vw;
}

.search-icon {
  display: inline-block;
  width: 6vw;
  height: 6vw;
  margin-right: 2vw;
  margin-bottom: 1vw;
}

input {
  display: inline-block;
  width: 82vw;
  height: 8vw;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  font-family: MicroSoft YaHei;
  font-size: 4vw;
}

.input-placeholder {
  font-family: MicroSoft YaHei;
  font-size: 4vw;
}

.banner-text {
  font-size: 12px;
  color: #b5b5b5;
  margin-left: 15px;
  margin-bottom: 5px;
}

.sport {
  margin-left: 6px;
}

.sport-message {
  display: flex;
  flex-direction: row;
}

.sport-message-text {
  display: flex;
  flex-direction: column;
}

.sport-title {
  font-size: 16px;
}

.sport-number{
  color: #EE5C42;
  margin-right: 4px;
}

.sport-image {
  display: inline-block;
  width: 45px;
  height: 45px;
  margin-left: 6px;
  margin-right: 12px;
  margin-bottom: 6px;
  margin-top: 6px;
}
