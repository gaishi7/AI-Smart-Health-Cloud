/* 自定义轮播点样式 */
swiper .wx-swiper-dot {
  width: 8px;
  height: 8px;
  background-color: #fff; /* 将轮播点颜色设置为白色 */
  border-radius: 4px; /* 使轮播点为圆形 */
  opacity: 0.5; /* 轮播点透明度 */
}

swiper .wx-swiper-dot-active {
  width: 16px;
  opacity: 1; /* 激活的轮播点不透明 */
}

/* 轮播点定位在图片上 */
swiper .wx-swiper-dots {
  position: absolute;
  left: 50%;
  bottom: 10px; /* 轮播点距离底部的距离，根据需要调整 */
  transform: translateX(-50%); /* 水平居中 */
}