.container{
width: 100%;
height: 100%;
overflow-x: hidden;
overflow-y: scroll;

}
.blurred-image::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20%; /* 虚化部分的高度，可以根据需要调整 */
  background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(10px); /* 虚化程度，可以根据需要调整 */
}
